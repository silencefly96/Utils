<?xml version="1.0" encoding="utf-8"?>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <!-- rectangle表示为矩形 -->

        <!-- 填充的颜色 -->
        <solid android:color="@color/colorWhite" />

        <!-- 边框的颜色和粗细 -->
        <stroke
            android:width="1dp"
            android:color="@color/grey"
            />
        <padding
            android:left="5dp"
            android:top="5dp"
            android:bottom="5dp"
            android:right="5dp"/>
        <!-- android:radius 圆角的半径 -->
        <corners
            android:radius="10dp"
            />

    </shape>
